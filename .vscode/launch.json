    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'luals' rust part",
            "cargo": {
                "args": [
                    "build",
                    "--bin=lua-language-server",
                    "--package=luals"
                ],
                "filter": {
                    "name": "lua-language-server",
                    "kind": "bin"
                }
            },
            "args": [
               
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "üçÑattach",
            "type": "lua",
            "request": "attach",
            "stopOnEntry": false,
            "address": "127.0.0.1:11428",
            "outputCapture": [],
            "sourceFormat": "string",
            "sourceMaps": [
                [
                    "script/*",
                    "${workspaceFolder}/script/*"
                ]
            ],
            "windows": {
                "sourceMaps": [
                    [
                        "script\\*",
                        "${workspaceFolder}/script/*"
                    ]
                ],
            },
        },
    ]
}